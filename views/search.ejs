<html >
        
        <head>
            <meta charset="utf-8">
        </head>
        <body>
            <section class="home">
            <h1>Users List</h1>

            <form name="form1" method="post" action="/profileList">
            <div col-xs-9>
                <input type='text' value='name' name='name' >
                <input type="text" value='age' name='age'>
                <input type="text" value='gender'name='gender' >
            
            <button type="submit" class="btn btn-primary btn-lg">Search</button>
            </div>
            <table class="list-group">
                <% for(var i=0; i<users.length; i++) {%>
                    <tr class="list-group-item">
                        <td>Name: </td><td><%= users[i].name %></td>
                        
                        <td>Occupation:</td> <td><%= users[i].occupation %></td>
                        
                        <td>Age:</td> <td><%= users[i].age %></td>
                        
                        <td>Gender:</td> <td><%= users[i].gender %></td>
                    </tr>
                <% } %> 
            </table>
            <% if (users.length<1) { %>
                    <h1>No record found</h1>
                  <% } %>
            </form>
            </section>
        </body>
        
        </html>